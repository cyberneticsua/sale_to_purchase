<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="client_type_search_form_view" model="ir.ui.view">
        <field name="name">client.type.search.form</field>
        <field name="model">client.type</field>
        <field name="arch" type="xml">
            <search string="Тип лида/клиента">
                <field name="name"/>
            </search>
        </field>
    </record>

    <act_window
        id="action_open_single_client_type"
        name="Client type"
        res_model="client.type"
        view_type="form"
        view_mode="kanban,form,tree"
        target="current"/>
        <!-- domain="[('res_partner_ids', 'in', active_id)]"/> -->

    <record id="view_client_type_tree" model="ir.ui.view">
        <field name="name">client.type.tree</field>
        <field name="model">client.type</field>
        <field name="arch" type="xml">
            <tree string="client.type">
                <field name="name"/>
                <field name="description"/>
                
            </tree>
        </field>
    </record>

    <record id="view_client_type_form" model="ir.ui.view">
        <field name="name">client.type.form</field>
        <field name="model">client.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <!-- <div class="oe_button_box" name="button_box">
                        <button name="action_open_client_type"
                            type="action"
                            class="oe_stat_button"
                            icon="fa-cubes">
                            <field name="partners_count" widget="statinfo" string="Лид/клиент"/>
                        </button>
                    </div> -->
                    <div class="oe_title">
                            <label for="name" string="Название типа" class="oe_edit_only"/>
                            <h1><field name="name"/></h1>
                    </div>
                    <group>
                    
                    </group>
                    <group string="Описание">
                        <field name="description" nolabel="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_client_type_kanban" model="ir.ui.view">
        <field name="name">client.type.kanban</field>
        <field name="model">client.type</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="description"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_vignette oe_semantic_html_override">
                            <a type="open">
                                <!-- <img t-att-src="kanban_image('product.brand', 'logo', record.id)"
                                     class="oe_kanban_image oe_kanban_avatar_smallbox"/> -->
                            </a>
                            <div class="oe_kanban_details">
                                <h4>
                                    <a type="open">
                                        <field name="name"/>
                                    </a>
                                </h4>
                                <!-- <div>
                                    <a name="client_type.action_open_brand_products"
                                       type="action">
                                        <t t-esc="record.parnters_count.value"/> Products
                                    </a>
                                </div> -->
                                <span>
                                    <t t-esc="record.description.value.substr(0,200)"/>
                                    <t t-if="record.description.value.length > 200">
                                        <a type="open"><b>...</b></a>
                                    </t>
                                </span>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="crm_lead_form_client_type_add" model="ir.ui.view">
        <field name="name">CRM lead client type form</field>
        <field name="model">crm.lead</field>
        <field name="type">form</field>
        <field name="priority" eval="16" />
        <field name="inherit_id" ref="crm.crm_case_form_view_leads" />
        <field name="arch" type="xml">
            <field name="phone" position="after">
                <field name="client_type_id" placeholder="Тип лида/клиента"/><div/>
            </field>
        </field>
    </record>

    <record id="crm_oppor_form_client_type_add" model="ir.ui.view">
        <field name="name">CRM oppor client type form</field>
        <field name="model">crm.lead</field>
        <field name="type">form</field>
        <field name="priority" eval="16" />
        <field name="inherit_id" ref="crm.crm_case_form_view_oppor" />
        <field name="arch" type="xml">
            <field name="phone" position="after">
                <field name="client_type_id" placeholder="Тип лида/клиента"/><div/>
            </field>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_client_type">
        <field name="name">Client type</field>
        <field name="res_model">client.type</field>
        <field name="view_type">form</field>
        <field name="view_mode">kanban,form,tree</field>
    </record>

    <menuitem
        name="Client types"
        id="menu_client_type"
        action="action_client_type"
        parent="crm.crm_menu_config"/>
</odoo>
